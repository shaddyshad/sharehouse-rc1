<!--suppress HtmlUnknownTarget -->
<DOCTYPE html="">
    <html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="initial-scale=1.0"/>
        <title> Sharehouse: Register</title>
        <!-- meta tags -->

        <!-- style files -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.3.3/dist/semantic.min.css">
        <%- include('styles') %>

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    </head>
    <body id="body">
    <div class="ui middle aligned center aligned grid" style="height: 100%;">
        <div class="column " style="width: 45%;">
            <h2 class="ui image header" style="margin-top: -100px">
                <div class="content">
                    Register for an account
                </div>
            </h2>
            <form action="/users/" method="post" class="ui large form">
                <div class="ui stacked secondary  segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user outline icon"></i>
                            <input type="text" name="name" placeholder="Name">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="email" placeholder="E-mail address">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="password" placeholder="Password">
                        </div>

                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="confirm" placeholder="Password">
                        </div>

                    </div>
                    <div class="field">
                        <select class="ui fluid dropdown" name="type">
                            <option value="">Account Type</option>
                            <option value="operator">Operator</option>
                            <option value="depositor">Depositor</option>
                        </select>

                    </div>
                    <div class="field">
                        <div class="ui checkbox">
                            <input type="checkbox" tabindex="0" class="hidden" name="terms">
                            <label>I agree to the <a>Terms and Conditions</a></label>
                        </div>
                    </div>
                    <div class="ui fluid large teal submit button">Register</div>
                </div>

                <div class="ui error message"></div>

            </form>

            <div class="ui message">
                Already have an account? <a href="/users/login">Login</a>
            </div>
        </div>
    </div>

    <!-- scripts -->
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.3.3/dist/semantic.min.js"></script>
    <script src="/javascripts/register.js"></script>
    <script type="text/javascript">
        $('select.ui.fluid.dropdown').dropdown();
        $('.ui.checkbox').checkbox();
    </script>

    </body>
    </html>

